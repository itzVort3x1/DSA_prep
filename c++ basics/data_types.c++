#include<iostream>
using namespace std;

int main() {
    // integer
    int a = 5;
    cout << a << endl;

    char b = 'v';
    cout << b << endl;

    // true=1 false=0
    bool bl = true;
    cout << bl << endl;

    float f = 1.2;
    cout << f << endl;

    double d = 1.23;
    cout << d << endl;

    cout << "Size of a is : " << sizeof(a) << endl;
    cout << "Size of f is : " << sizeof(f) << endl;
    cout << "Size of d is : " << sizeof(d) << endl;
}